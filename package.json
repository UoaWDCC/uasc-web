{
  "name": "uasc-web",
  "version": "1.0.0",
  "description": "Monorepo for the UASC project (by WDCC @ UoA)",
  "private": true,
  "scripts": {
    "lint": "eslint",
    "lint:all": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --write",
    "prettier:ci": "prettier . --check",
    "dev": "turbo run dev",
    "generate:types": "turbo run generate:types",
    "build": "turbo run build",
    "vsc-setup": "code --install-extension dbaeumer.vscode-eslint && code --install-extension esbenp.prettier-vscode && code install-extension bradlc.vscode-tailwindcss",
    "postinstall": "husky",
    "storybook": "pnpm --prefix=client storybook",
    "test": "turbo run test",
    "test:routes": "turbo run test:routes",
    "test:firebase": "turbo run test:firebase",
    "test:services": "turbo run test:services",
    "test:server": "turbo run test:server",
    "test:client": "turbo run test:client",
    "test:route": "sh -c 'pnpm test:firebase -- \"jest --config=jest.config.endpoints.ts $0\"'",
    "test:service": "sh -c 'pnpm test:firebase -- \"jest --config=jest.config.server.ts $0\"'"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.20.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.23",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "~3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx,vue}": [
      "yarn lint",
      "yarn prettier"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "projects": [
      "<rootDir>/server/jest.config.server.ts"
    ]
  },
  "volta": {
    "node": "20.3.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": "^10.0.0"
  },
  "packageManager": "pnpm@10.11.0"
}
